@using ProjeCV.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBL_SKILLS>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>YETENEK</th>
            <th>İŞLEMLER</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.ID</td>
                <td>@x.SKILL</td>
                <td>
                    <a href="/Yetenekler/Sil/@x.ID" class="btn btn-danger">Sil</a>
                    @Html.ActionLink("Sil Butonu","Sil",new {id=x.ID },new {@class="btn btn-warning",onclick="return confirm('Silmek İstiyormusunuz?')" })
                    <a href="/Yetenekler/YetenekGetir/@x.ID" class="btn btn-success">Güncelle</a>
                </td>
            </tr>
        }

    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new { sayfa}));
<a href="/Yetenekler/YeniYetenek/" class="btn btn-info">Yeni Yetenek Ekle</a>